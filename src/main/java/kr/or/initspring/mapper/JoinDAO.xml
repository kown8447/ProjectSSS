<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.or.initspring.dao.JoinDAO">
	<insert id="insertMember">
		insert into membertest(userid,pwd,name,email,randkey)
		values(#{userid},#{pwd},#{name},#{email},#{randkey})
	</insert>
	
	<select id="confirmMember" resultType="int">
		select count(*) from membertest where userid = #{param1} and randkey = #{param2}
	</select>
	
	<update id="updateJoinstate">
		update membertest set joinstate=1 where userid = #{userid}
	</update>
	
	<insert id="insertRole">
		insert into role(role_name, userid) values(#{param1},#{param2})
	</insert>
	
	<select id="getMemberByUserid" resultType="kr.or.initspring.dto.MemberTestDTO">
		select * from membertest where userid = #{userid}
	</select>
	
	<insert id="insertStudentTable">
		insert into student(student_code, userid) values(#{param1},#{param2})
	</insert>
	
</mapper>