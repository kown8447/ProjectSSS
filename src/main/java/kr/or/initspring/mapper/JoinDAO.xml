<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.or.initspring.dao.JoinDAO">
	<insert id="insertMember">
		insert into membertest(userid,pwd,name,email)
		values(#{userid},#{pwd},#{name},#{email})
	</insert>
	
	<insert id="insertRole">
		insert into role(role_name, userid) values(#{param1},#{param2})
	</insert>
	
	<insert id="insertStudentTable">
		insert into student(student_code, userid) values(#{param1},#{param2})
	</insert>
	
	<select id="joinCheck1" parameterType="kr.or.initspring.dto.CodeMgDTO" resultType="int">
		select count(*) from code_mg where code_name = #{code_name} and code = #{code} and code_birth = #{code_birth}
	</select>
	
	<select id="checkID" resultType="String">
		select userid from membertest where userid = #{userid}
	</select>
</mapper>